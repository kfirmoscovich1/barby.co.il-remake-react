# ===========================================
# BARBY Backend Production Environment (Render)
# ===========================================

# Server Configuration
PORT=3001
NODE_ENV=production

# Database (Use MongoDB Atlas)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/barby?retryWrites=true&w=majority

# JWT Authentication (GENERATE NEW SECRETS!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_64_BYTE_SECRET
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_64_BYTE_SECRET
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration (Vercel frontend URL)
CORS_ORIGIN=https://barby.kfirmoscovich.com
ALLOWED_ORIGINS=https://barby.kfirmoscovich.com,https://barby-kfirmoscovich.vercel.app

# Admin User
ADMIN_EMAIL=admin@barby.co.il
ADMIN_PASSWORD=USE_A_VERY_STRONG_PASSWORD_HERE

# SSL/HTTPS (Render handles SSL automatically)
HTTPS_ENABLED=true

# Rate Limiting
RATE_LIMIT_MAX=100

# Brute Force Protection
BRUTE_FORCE_MAX_ATTEMPTS=5
BRUTE_FORCE_LOCKOUT_MINUTES=15
